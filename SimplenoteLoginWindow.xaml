<Window x:Class="NotedSpeed.SimplenoteLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimplenoteLoginWindow" Height="229" Width="451">
    <Grid>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="78,34,0,0" Name="email" VerticalAlignment="Top" Width="339" />
        <Label Content="Email" Height="28" HorizontalAlignment="Left" Margin="12,32,0,0" Name="label1" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="78,63,0,0" Name="password" VerticalAlignment="Top" Width="339"  />
        <Label Content="Password" Height="28" HorizontalAlignment="Left" Margin="12,61,0,0" Name="passwordLabel" VerticalAlignment="Top" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="342,92,0,0" Name="loginButton" VerticalAlignment="Top" Width="75" Click="loginButton_Click" />
        <Label Content="Please enter your Simplenote login credentials" Height="28" HorizontalAlignment="Left" Margin="12,0,0,0" Name="label2" VerticalAlignment="Top" />
    </Grid>
</Window>
